@model Produto

<div border="1px" class="col-sm-4 col-md-4 col-lg-4">
    <p><img src="@Model.ImagemUrl" width="200px" height="200px" /></p>
    <p>Preço : @Model.Preco.ToString("c")</p>
    <h4>
        <a asp-controller="Produto" asp-action="Details" asp-route-produtoId="@Model.ProdutoId">@Model.Nome</a>
    <p>@Model.DescricaoCurta</p>
    <div>
        <p class="button">
                <a class="btn btn-dark" asp-controller="CarrinhoCompra" asp-action="AdicionarItemNoCarrinhoCompra" asp-route-produtoId="@Model.ProdutoId"> Incluir no Carrinho </a>
        </p>
    </div>
</div>